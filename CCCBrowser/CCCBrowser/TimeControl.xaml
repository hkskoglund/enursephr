<UserControl x:Class="CCCBrowser.TimeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:input="clr-namespace:Microsoft.Windows.Controls;assembly=Microsoft.Windows.Controls.Input"
    Loaded="UserControl_Loaded"
    >
    <StackPanel Orientation="Horizontal">
        <input:NumericUpDown x:Name="nuHours" Maximum="12" Minimum="0" IsEditable="True" ValueChanged="nuHours_ValueChanged"  />
        <input:NumericUpDown x:Name="nuMinutes" Maximum="59" Minimum="0" IsEditable="True" ValueChanged="nuMinutes_ValueChanged" />
    </StackPanel>
</UserControl>
