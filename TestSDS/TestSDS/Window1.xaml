<Window x:Class="TestSDS.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:browser="clr-namespace:CCCBrowser;assembly=CCCBrowser"
        Title="CCC Browser - SDS" Height="300" Width="300"
    Loaded="Window_Loaded"    
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <browser:CCCBrowserControl Grid.Column="1" />
        
        
           <ProgressBar x:Name="pbProgress" Grid.Row="1" Maximum="100" />
           <TextBlock x:Name="tbStatus"  Grid.Row="1" />
        
        
    </Grid>
</Window>
